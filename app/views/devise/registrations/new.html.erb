<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    <br>
    <%= f.hidden_field :condition, value: SecureRandom.random_number(2)  %>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
    <br>
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
    <br>
  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
    <br>
  <div class="field">
    <%= f.label "Maximun daily coffee intake :" %>
    <%= f.number_field :climit, autofocus: true %>
  </div>
  <br>
  <div class="field">
    <%= f.label "Minimum daily water intake :" %>
    <%= f.number_field :wlimit, autofocus: true %>
  </div>
  <br>
    <div class="field">
        <%= f.label "Would you like to do walking as an activity:" %>
        <%= f.check_box :walkpref, as: :integer, autofocus: true %>
    </div>
    <br>
    <div class="field">
    <%= f.label "Would you like to do commuting as an activity:" %>
    <%= f.check_box :commutepref, as: :integer, autofocus: true %>
  </div>
    <br>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
