<div class="container">
    <%= render "layouts/header" %>
    <h1>Posts</h1>
      <p id="notice">
        <%= notice %>
      </p>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th>Affect</th>
          <th>Entertainment</th>
          <th>User</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.body %></td>
            <td><%= post.affect %></td>
            <td><%= post.entertainment %></td>
            <td><%= post.user.username %></td>
            <td><%= link_to 'Show', post %></td>
              <% if current_user && current_user.admin %>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>
              <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <section class="newpost_banner center" id="new post">
        <div class="button newbtn"><%= link_to 'New Post', new_post_path %></div>
    </section>
</div>
