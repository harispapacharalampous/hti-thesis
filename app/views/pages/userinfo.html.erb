<div class="container">
			<div class="profile-sidebar">
				<!-- SIDEBAR USERPIC -->
                <div class="row justify-content-center">
                    <div class="col-md-9">
                        <div class="justify-content-center profile-userpic">
                            <img src="https://i.pinimg.com/originals/2c/7f/d4/2c7fd4e277d332cf993e93d98906dfd1.png" class="center-user-image img-responsive" alt="supervillain">
                        </div>
                    </div>
                </div>
                <!-- END SIDEBAR USERPIC -->

                <!-- SIDEBAR USER TITLE -->
                <div class="row justify-content-center">
                    <div class="profile-usertitle">
                        <div class="justify-content-center profile-usertitle-name">
                            MF  DOOM
                        </div>
                        <div class="profile-usertitle-job">
                            Supervillain
                        </div>
                        <div class="profile-usertitle-name">
                            <%= current_user.username %>
                        </div>
                    </div>
                </div>
                <!-- END SIDEBAR USER TITLE -->

				<!-- SIDEBAR BUTTONS -->
                <div class="row justify-content-center">
				<div class="profile-userbuttons">
					<button type="button" class="btn btn-danger btn-sm">SIGN OUT</button>
				</div>
                </div>
				<!-- END SIDEBAR BUTTONS -->

				<!-- FEEDBACK SECTION -->
                <div class="row justify-content-center">
                    <!--Div that will hold the pie chart-->
                    <div class="col-md-auto">
                        <!--chartkick scripts-->
                        <script src="https://www.gstatic.com/charts/loader.js"></script>
                        <script src="chartkick.js"></script>
                        <%= javascript_include_tag "//www.gstatic.com/charts/loader.js", "chartkick" %>
                        <!-- chart for posts -->
                        <%= line_chart Post.all.pluck("created_at, affect"), min:"6", max:"-6", xmin:"2020-01-01", xmax: "2020-09-01" %>
                         <div id="line" style="height: 500px;width:900px;"></div>
                            <script>
                              new Chartkick.LineChart("line", {"2013-02-10":3,"2013-02-11":2,"2013-02-12":3,"2013-02-13":2,"2013-02-14":-1,"2013-02-15":2,"2013-02-16":0,"2013-02-17":0,"2013-02-18":0,"2013-02-19":-2,"2013-02-20":2,"2013-02-21":-2,"2013-02-22":3,"2013-02-23":1,"2013-02-24":-2,"2013-02-25":1,"2013-02-26":3,"2013-02-27":2,"2013-02-28":3,"2013-03-01":2,"2013-03-02":2});
                            </script>
                    </div>
                </div>
			</div>
</div>
